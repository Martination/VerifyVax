{
  "extends": ["tslint:latest", "tslint-react"],
  "linterOptions": {
    "exclude": [
      "node_modules/**",
      "sidetree/**"
    ]
  },
  "defaultSeverity": "error",
  "rules": {
      "no-console": [false],
      "string-literals": [false],
      "no-submodule-imports": [false],
      "no-duplicate-imports": [false],
      "no-string-literal": [false],
      "max-line-length": [
          true,
          160
      ],
      "ter-indent": false,
      "variable-name": [
        true,
        "check-format",
        "allow-leading-underscore",
        "allow-snake-case",
        "allow-pascal-case"
      ],
      "await-promise": [false]
  }
}
